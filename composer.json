{
    "name": "vermilion/app",
    "description": "vermilion/app",
    "license": "proprietary",
    "minimum-stability": "dev",
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "wordpress",
                "type": "webroot",
                "version": "4.7.4",
                "dist": {
                    "type": "zip",
                    "url": "https://github.com/WordPress/WordPress/archive/4.7.4.zip"
                },
                "require" : {
                    "fancyguy/webroot-installer": "1.0.0"
                }
            }
        }
    ],
    "require": {
        "wordpress": "4.7.4",
        "fancyguy/webroot-installer": "1.0.0"
    },
    "extra": {
        "webroot-dir": "html/wordpress",
        "webroot-package": "wordpress"
    },
    "scripts": {
        "post-install-cmd": [
            "cd html/wp-content/themes/taco-theme/app/core && composer install",
            "if [ ! -L html/wordpress/.htaccess ]; then cp .htaccess-wordpress-default html/wordpress/.htaccess; fi",
            "ln -s html/wp-content/themes/taco-theme ./shortcut-to-taco-theme"
        ],
        "post-update-cmd": [
            "cd html/wp-content/themes/taco-theme/app/core && composer install",
            "if [ ! -L html/wordpress/.htaccess ]; then cp .htaccess-wordpress-default html/wordpress/.htaccess; fi",
            "ln -s html/wp-content/themes/taco-theme ./shortcut-to-taco-theme"
        ]
    }
}
